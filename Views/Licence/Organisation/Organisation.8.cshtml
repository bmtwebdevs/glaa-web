@{
    ViewBag.Title = "Organisation - Part 7";
    var switchValue = "true";
}

@model GLAA.ViewModels.LicenceApplication.SourcingWorkersViewModel

@using (Html.BeginForm())
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                Where does the organisation intends to source its workers from?
            </h1>
        </div>
        <div class="column-two-thirds">
            <div class="form-group">
                <fieldset>
                    <legend>
                        <span class="body-text"></span>
                    </legend>
                    @foreach (var option in Model.AvailableSources)
                    {
                        <div class="multiple-choice">
                            @Html.RadioButtonFor(x => x.WorkerSource, option.Value)
                            @Html.Label(option.Text)
                        </div>                        
                    }                    
                </fieldset>
            </div>
            <div class="form-group">
                <p>TODO: Worker countries</p>
            </div>
        </div>
    </div>    
    <button type="submit" class="button">Save and continue</button>
}

