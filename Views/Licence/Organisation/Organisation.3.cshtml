@{
    ViewBag.Title = "Organisation - Part 2";
}

@model GLAA.ViewModels.LicenceApplication.WrittenAgreementViewModel

@using (Html.BeginForm())
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                Will the business have a written agreement to supply workers with all it's customers?
            </h1>
        </div>
        <div class="column-two-thirds">
            <div class="form-group">
                <fieldset>
                    <legend>
                        <span class="body-text">(Within the regulated sectors)</span>
                    </legend>
                    @foreach (var option in Model.YesNo)
                    {
                        <div class="multiple-choice">
                            @Html.RadioButtonFor(x => x.HasWrittenAgreementsInPlace, option.Value)
                            @Html.Label(option.Text)
                        </div>
                    }
                </fieldset>
            </div>
        </div>
    </div>
    
    <button type="submit" class="button">Save and continue</button>
}