@{
    ViewBag.Title = "Organisation - Part 9";
}

@model GLAA.ViewModels.LicenceApplication.WorkerContractViewModel

@using (Html.BeginForm())
{
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What type of contract do you intend to issue to your workers?
            </h1>
        </div>
        <div class="column-two-thirds">
            <div class="form-group">
                <fieldset>
                    <legend>
                        <span class="body-text"></span>
                    </legend>
                    @foreach (var option in Model.AvailableContracts)
                    {
                        <div class="multiple-choice">
                            @Html.RadioButtonFor(x => x.SelectedContract, option.Value)
                            @Html.Label(option.Text)
                        </div>
                    }
                </fieldset>
            </div>
        </div>
    </div>    
    <button type="submit" class="button">Save and continue</button>
}