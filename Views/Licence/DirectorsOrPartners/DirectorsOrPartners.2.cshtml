@model GLAA.ViewModels.LicenceApplication.DirectorOrPartnerCollectionViewModel

@{
    ViewBag.Title = "Directors Or Partners";
}

@using (Html.BeginForm())
{
    <main id="content" role="main">
        <div class="grid-row">
            <div class="column-two-thirds">
                @Html.Partial("_GdsValidationSummary")
            </div>
            <div class="column-full">
                <h1 class="heading-large">
                    How many Directors or Partners are there in your business?
                </h1>
            </div>
            <div class="column-two-thirds">
                @Html.TextFormGroupFor(x => x.NumberOfDirectorsOrPartners)
            </div>
        </div>
        <button type="submit" class="button">Save and continue</button>
    </main>
}
