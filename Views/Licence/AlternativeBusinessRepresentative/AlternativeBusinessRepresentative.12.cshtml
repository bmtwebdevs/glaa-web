@{
    ViewBag.Title = "Alternative Business Representative - Part 12";
}

@model GLAA.ViewModels.LicenceApplication.NationalInsuranceNumberViewModel

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.IsUk)
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.Partial("_GdsValidationSummary")
        </div>
        <div class="column-full">
            <h1 class="heading-large">
                What is your national insurance number?
            </h1>
        </div>
        <div class="column-two-thirds">
            @Html.TextFormGroupFor(x => x.NationalInsuranceNumber)
        </div>
    </div>
    
    <button type="submit" class="button">Save and continue</button>
}