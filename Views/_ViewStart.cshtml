@{

    var controllerName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    string layoutFile;
    switch (controllerName)
    {
        case "Admin":
            layoutFile = "~/Views/Shared/_GOV.UKAdminLayout.cshtml";
            break;
        default:
            layoutFile = "~/Views/Shared/_GOV.UKLayout.cshtml";
            break;
    }
    Layout = layoutFile;
}
